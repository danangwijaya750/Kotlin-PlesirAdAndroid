<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="180dp">
    <android.support.v7.widget.CardView
            android:layout_margin="5dp"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:padding="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="8dp"
    >
        <LinearLayout
                android:padding="5dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
            <ImageView
                    android:layout_margin="2dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    tools:srcCompat="@drawable/ic_launcher_background"
                    android:id="@+id/imageView"
                    />
            <LinearLayout android:orientation="vertical"
                          android:layout_margin="2dp"
            android:layout_height="match_parent"
                          android:layout_width="match_parent"
            >
            <TextView
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/namaSpace"
                    android:text="SpaceIklan1"
                    android:textColor="#000"
                    android:textSize="18sp"
            />
                <TextView
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/lokasiSpace"
                        android:text="Kebun Buah Mangunan"
                        android:textColor="#000"
                        android:textSize="20sp"
                />
                <TextView
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/visitorSpace"
                        android:text="1000 Pengunjung perminggu"
                        android:textSize="12sp"
                />
                <TextView
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/ratingSpace"
                        android:text="4.5"
                        android:textSize="12sp"
                />
                <TextView
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/pricingSpace"
                        android:text="Rp. 300.000/minggu"
                        android:textSize="18sp"
                />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>